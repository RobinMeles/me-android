<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="36dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.forus.me.android.presentation.view.component.text.TextView
        style="@style/Body2Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_restore_description"
        android:paddingRight="27dp"
        android:paddingEnd="27dp"/>

    <io.forus.me.android.presentation.view.component.editors.EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:hint="E-mail"
        app:validationError="@string/email_is_invalid"
        app:validationRegex="@string/email_validation_regex" />


    <io.forus.me.android.presentation.view.component.editors.EditText
        android:id="@+id/email_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:hint="Repeate Email"
        app:validationError="@string/email_is_invalid"
        app:validationRegex="@string/email_validation_regex" />

    <io.forus.me.android.presentation.view.component.buttons.Button
        android:id="@+id/restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="@string/restore_by_email" />

</LinearLayout>