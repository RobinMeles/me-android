<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <io.forus.me.android.presentation.view.component.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body2"
            android:text="@string/restore_pincode_description" />

        <io.forus.me.android.presentation.view.component.pin.PinView
            android:id="@+id/pin_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="22dp">

        </io.forus.me.android.presentation.view.component.pin.PinView>

        <io.forus.me.android.presentation.view.component.text.TextView
            android:id="@+id/btn_pin_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.1sp"
            android:textColor="@color/forus_blue"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="3.9sp"
            android:layout_gravity="center_horizontal"
            android:text="@string/restore_pincode_how" />

    </LinearLayout>



</ScrollView>