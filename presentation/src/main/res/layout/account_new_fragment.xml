<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="36dp">


            <io.forus.me.android.presentation.view.component.editors.EditText
                android:id="@+id/firstName"
                android:visibility="gone"
                app:validationRegex="@string/not_empty_validation_regex"
                app:validationError="@string/not_empty_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <io.forus.me.android.presentation.view.component.editors.EditText
                android:id="@+id/lastName"
                android:visibility="gone"
                app:validationRegex="@string/not_empty_validation_regex"
                app:validationError="@string/not_empty_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <io.forus.me.android.presentation.view.component.editors.EditText
                android:id="@+id/bsn"
                android:visibility="gone"
                app:validationRegex="@string/not_empty_validation_regex"
                app:validationError="@string/not_empty_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <io.forus.me.android.presentation.view.component.editors.EditText
                android:id="@+id/email"
                app:hint="E-mail"
                app:validationRegex="@string/email_validation_regex"
                app:validationError="@string/email_is_invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <io.forus.me.android.presentation.view.component.editors.EditText
                android:id="@+id/phone"
                android:visibility="gone"
                app:validationRegex="@string/not_empty_validation_regex"
                app:validationError="@string/not_empty_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <io.forus.me.android.presentation.view.component.buttons.Button
                android:id="@+id/register"
                android:text="@string/create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</ScrollView>